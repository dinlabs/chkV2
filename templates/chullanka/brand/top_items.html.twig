{% if brands|length %}
<div id="topBrands">
    <h2 class="autoMargin">{{ _title is defined ? _title : 'Nos marques au top' }}</h2>
    <div class="glider-contain">
        <div class="glider">
            {% for brand in brands %}
            <div>
                <a href="{{ path('brand_view', {'code': brand.code}) }}">{% if brand.logo %}<img src="{{ asset('media/brand/logos/' ~ brand.logo) }}" alt="{{ brand.name }}" class="logo">{% else %}{{ brand.name }}{% endif %}</a>
            </div>
            {% endfor %}
        </div>
        <div role="tablist" class="dots"></div>
    </div>
    <script>
        window.addEventListener('load', function(){
            new Glider(document.querySelector('#topBrands .glider'), { 
                slidesToShow: 2.1,
                slidesToScroll: 1,
                draggable: true,
                scrollLock: true,
                dots: '#topBrands .dots',
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 'auto',
                            itemWidth: 180,
                            exactWidth: 150,
                        }
                    }
                ]
            });
        });
    </script>
    {% if _title is not defined %}
    <a href="{{ path('brand_index') }}" class="btn">Toutes les marques</a>
    {% endif %}
</div>
{% endif %}