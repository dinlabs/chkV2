{%
    set viewOptions = {
        cancelled: { icon: 'ban', color: 'red' },
        cart: { icon: 'adjust', color: 'grey' },
        ready: { icon: 'clock', color: 'blue' },
        onhold: { icon: 'clock', color: 'yellow' },
        preparation: { icon: 'adjust', color: 'blue' },
        shipped: { icon: 'plane', color: 'green' },
        store_trouble: { icon: 'clock', color: 'yellow' },
        store_available: { icon: 'clock', color: 'blue' },
        store_collected: { icon: 'plane', color: 'green' },
        store_sent: { icon: 'plane', color: 'green' },
    }
%}

{% set value = 'sylius.ui.' ~ data %}

<span class="ui {{ viewOptions[data]['color'] }} label">
    <i class="{{ viewOptions[data]['icon'] }} icon"></i>
    {{ value|trans }}
</span>
