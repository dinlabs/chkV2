<div id="announces">
    <div class="glider-contain">
        <div class="glider">
            {{ render(path('bitbag_sylius_cms_plugin_shop_block_index_by_section_code', {'sectionCode' : 'announces', 'template' : '@SyliusShop/Block/simple_blocklist.html.twig'})) }}
        </div>
        <div role="tablist" class="dots"></div>
    </div>
    <script>
        // https://nickpiscitelli.github.io/Glider.js/
        window.addEventListener('load', function(){
            new Glider(document.querySelector('#announces .glider'), { 
                slidesToShow: 1,
                slidesToScroll: 1,
                duration: 3,
                draggable: true,
                scrollLock: true,
                dots: '#announces .dots',
                responsive: [
                    {
                        // screens greater than >= 1024px
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 'auto',
                            itemWidth: 360,
                            exactWidth: 330
                        }
                    }
                ]
            });
        });
    </script>
</div>