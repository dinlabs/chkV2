{% import '@SyliusShop/Common/Macro/money.html.twig' as money %}

<div class="item" {{ sylius_test_html_attribute('shipping-item') }} data-price="{{ fee }}">
    {{ form_widget(form, sylius_test_form_attribute('shipping-method-select')) }}
    {{ form_label(form) }}

    <strong>{{ (fee == 0) ? 'app.front.free_delivery'|trans : money.convertAndFormat(fee) }}</strong>

    {% if method.description is not null %}
    <div class="description">
        <p>{{ method.description }}</p>
    </div>
    {% endif %}

    {% if method.code == 'home_express' or method.code == 'pickup_express' %}
    <p><small>* Livraison en France Métropolitaine – Hors livraison à l'international</small></p>
    {% endif %}
</div>
