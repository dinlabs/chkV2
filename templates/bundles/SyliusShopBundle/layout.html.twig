<!DOCTYPE html>

<html lang="{{ app.request.locale|slice(0, 2) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{% block title %}{{ sylius.channel.name }}{% endblock %}</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% block metatags %}
    {% endblock %}

    {% block stylesheets %}
        {#{ sylius_template_event('sylius.shop.layout.stylesheets') }#}
        {% include '@SyliusUi/_stylesheets.html.twig' with {'path': 'chullanka/assets/css/shop.style.css'} %}
        {% include '@SyliusUi/_stylesheets.html.twig' with {'path': 'chullanka/assets/css/styles.css'} %}
    {% endblock %}

    {{ sylius_template_event('sylius.shop.layout.head') }}
</head>

<body class="{{ (app.request.get('_route') == 'sylius_shop_homepage') ? 'home' : '' }}">
{{ sylius_template_event('sylius.shop.layout.before_body') }}
{% block top %}
    <div id="topAnnounce">
        <button class="close"><svg class="svg-icon" role="img" style="width:18px; height:18px"><use xlink:href="/chullanka/assets/img/sprites.svg#ico-close"/></svg></button>
        <p>
            <strong>Soldes : jusqu'Ã  -70%</strong>
            Profitez vite de nos nouvelles offres
            <a href="#">C'est par ici</a>
        </p>
    </div>
    {#
    <div id="menu" class="ui large sticky inverted stackable menu">
        {{ sylius_template_event('sylius.shop.layout.topbar') }}
    </div>
    #}
{% endblock %}

{% block header %}
    <header>
        {{ sylius_template_event('sylius.shop.layout.header') }}
    </header>
{% endblock %}

<div class="autoMargin">
    {% include '@SyliusShop/_flashes.html.twig' %}
</div>

<!--div class="ui container"-->
    {{ sylius_template_event('sylius.shop.layout.before_content') }}
    {% block content %}
    {% endblock %}
    {{ sylius_template_event('sylius.shop.layout.after_content') }}
<!--/div-->

{% block footer %}
    {% include '@SyliusShop/_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {#{ sylius_template_event('sylius.shop.layout.javascripts') }#}
    {% include '@SyliusUi/_javascripts.html.twig' with {'path': 'chullanka/assets/js/shop.app.js'} %}
    {% include '@SyliusUi/_javascripts.html.twig' with {'path': 'chullanka/assets/js/glider.js'} %}
    {% include '@SyliusUi/_javascripts.html.twig' with {'path': 'chullanka/assets/js/app.js'} %}
{% endblock %}

{% include '@SyliusUi/Modal/_confirmation.html.twig' %}
{{ sylius_template_event('sylius.shop.layout.after_body') }}
</body>
</html>
