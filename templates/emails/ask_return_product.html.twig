{% extends '@SyliusShop/Email/layout.html.twig' %}

{% block subject %}Nouvelle demande de retour produit{% endblock %}

{% block heademail %}
    Une nouvelle demande de retour<br>Alors, on accepte ou pas ?
{% endblock %}

{% block content %}
<p><strong>Bonjour Service Client,</strong></p>
    <p>Une nouvelle demande de retour vient d'arriver. Voici les informations :</p>
    <ul>
        {% if rma.order %}
        <li>Commande n°{{ rma.order.number }}</li>
        {% endif %}
        {% if rma.customer %}
        <li>{{ rma.customer }}</li>
        {% endif %}
    </ul>
    <br>
    <p><strong>Numéro de la demande :</strong> {{ rma.number }}</p>
    {% if rma.rmaProducts %}
    <p>
        <strong>Produit(s) : </strong>
    {% for rmaProduct in rma.rmaProducts %}
        {{ rmaProduct.orderItem.variantName }}<br>
    {% endfor %}
    </p>
    {% endif %}
{% endblock %}